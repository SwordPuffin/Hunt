                      </object>
                    </child>
                  </object>
                </child>
                <child type="lyt_grid">
                  <object class="GtkScrolledWindow" id="lyt_grid">
                    <child>
                      <object class="GtkGrid" id="grid">
                        <property name="halign">center</property>
                        <property name="margin-bottom">15</property>
                        <property name="margin-end">15</property>
                        <property name="margin-start">15</property>
                        <property name="valign">center</property>
                      </object>
                    </child>
                    <style>
                      <class name="undershoot-top"/>
                      <class name="undershoot-bottom"/>
                      <class name="undershoot-start"/>
                      <class name="undershoot-end"/>
                    </style>
                  </object>
                </child>
                <child type="lyt_game-options">
                  <object class="AdwPreferencesPage" id="lyt_game-options">
                    <child>
                      <object class="AdwPreferencesGroup" id="clock">
                        <property name="description">14.3 seconds</property>
                        <property name="title" translatable="yes">Time left</property>
                        <property name="visible">False</property>
                        <child>
                          <object class="GtkProgressBar" id="timer_progBar">
                            <property name="ellipsize">middle</property>
                            <property name="fraction">0.8</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwPreferencesGroup">
                        <property name="header-suffix">
                          <object class="GtkButton">
                            <property name="action-name">win.hint</property>
                            <property name="has-frame">False</property>
                            <property name="icon-name">lightbulb-symbolic</property>
                            <property name="tooltip-text">Get a hint</property>
                            <style>
                              <class name="warning"/>
                            </style>
                          </object>
                        </property>
                        <property name="title" translatable="yes">Words to find</property>
                        <child>
                          <object class="GtkListBox" id="frame">
                            <style>
                              <class name="boxed-list"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
    <property name="default-width">800</property>
    <child>
      <object class="AdwBreakpoint">
        <!-- Custom object fragments -->
        <condition>max-width: 600px</condition>
        <setter object="multi_layout" property="layout-name">portrait</setter>
        <setter object="ingame_layouts" property="layout-name">portrait</setter>
        <setter object="game_selector" property="margin-bottom">36</setter>
      </object>
    </child>
  </template>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="action">win.show-help-overlay</attribute>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
      </item>
      <item>
        <attribute name="action">app.about</attribute>
        <attribute name="label" translatable="yes">_About Hunt</attribute>
      </item>
      <item>
        <attribute name="action">app.help</attribute>
        <attribute name="label" translatable="yes">_Help</attribute>
      </item>
    </section>
  </menu>
</interface>
